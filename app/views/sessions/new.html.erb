<p id="notice"><%= notice %></p>

<% provide(:title, "Sign In") %>

<div class="outer-login">
  <h1><i class="fas fa-lock"></i> Sign In</h1>

  <br>
  
  <div>
    <%= form_for(:session, url: login_path) do |f| %>

      <div class="inner-login">
        <!-- <%= f.label :email %> -->
        Username <%= f.text_field :email, class: 'form-mini' %>

        <br><br>

        <!-- <%= f.label :password %> -->
        Password <%= f.password_field :password, class: 'form-mini' %>
      </div>

      <br>


      <%= f.check_box :remember_me %>
      <span>Remember me</span>

      <br><br>

      <%= f.submit "Sign in", class: "button" %>
    <% end %>

    <br>

    <% if Setting.find(8).state %>
      <p>Can't log in? <%= link_to "Reset password", new_password_reset_path %></p>
    <% end %>

    <% if Setting.find(3).state %>
      <p>New user? <%= link_to "Sign up", signup_path %></p>
    <% end %>

  </div>
</div>