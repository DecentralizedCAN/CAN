<%    
  @user = current_user
  @commitments = @user.rolls
  @sponsored_problems = @user.problems
  @proposals = @user.solutions
  @current_time = Time.now.to_i
%>

<% if @commitments.count > 0 || @sponsored_problems.count > 0 || @proposals.count > 0 %>

<div id="dashboard-mini">
  <% if @commitments.count > 0 && Completion.where(user_id: @user.id).count < @commitments.length %>

    <div class="dashboard-item mini card-item">

      <h2>
        <!-- <i class="fas fa-users"></i> -->
        My Commitments
      </h2>

      <!-- <h2>
        <i class="fas fa-calendar-check"></i>
        Activated commitments
      </h2> -->
      <ul>
        <% @commitments.each do |commitment| %>
          <% if total_committed(commitment.activity) >= total_minimum(commitment.activity) && (!commitment.activity.expiration || commitment.activity.expiration > @current_time) %>
          <% if Completion.where(user_id: @user.id).where(roll_id: commitment.id).count == 0  %>

            <%= link_to  action_path(commitment.activity.id) do %>
              <li> 
                <i class="fas fa-calendar-check"></i>
                <%= commitment.activity.title %>: 
                <%= commitment.title %>
              </li>
            <% end %>

          <% end %>
          <% end %>
        <% end %>
      </ul>

      <!-- <h2>
        <i class="far fa-calendar"></i>
        Unactivated commitments
      </h2> -->
      <ul>
      	<% @commitments.each do |commitment| %>
          <% if total_committed(commitment.activity) < total_minimum(commitment.activity) && (!commitment.activity.expiration || commitment.activity.expiration > @current_time) %>
          <% if Completion.where(user_id: @user.id).where(roll_id: commitment.id).count == 0  %>

        		<%= link_to  action_path(commitment.activity.id) do %>
              <li> 
                <i class="far fa-calendar"></i>
                (<%= total_committed(commitment.activity) %>/<%=total_minimum(commitment.activity)%>)
                <!-- (<%= commitment.activity.roll.first.user.count %>/<%= commitment.activity.roll.first.minimum %>)  -->
                <%= commitment.activity.title %>:
                <%= commitment.title %>
              </li>
            <% end %>
            
          <% end %>
          <% end %>
      	<% end %>
      </ul>
  </div>
  <% end %>


  <% if @sponsored_problems.count > 0 %>
  <div class="dashboard-item mini card-item">
    <h2>
      My Brainstorms
    </h2>
    <ul>
      <% @sponsored_problems.each do |problem| %>
        <%= link_to issue_path(problem) do %>
          <li> 
            <i class="fas fa-brain"></i>
            <%= problem.title %> 
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>
  <% end %>
