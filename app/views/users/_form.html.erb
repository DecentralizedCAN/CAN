<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :username %>
    <%= form.text_field :name, id: :user_name, :class => "form-mini" %>
  </div>

  <div class="field">
    <label>
      Email <%= "(optional)" if Setting.find(7).state == false %>
    </label>
    <%= form.text_field :email, id: :user_email, :class => "form-mini" %>
  </div>

  <%= form.label :password %>
  <%= form.password_field :password, :class => "form-mini" %>

  <%= form.label :password_confirmation, "Confirm password" %>
  <%= form.password_field :password_confirmation, :class => "form-mini" %>


  <br><br>
  <%= form.submit "Submit", :class => "button" %>
<% end %>
