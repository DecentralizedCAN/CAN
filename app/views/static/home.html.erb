<% if logged_in? %>

<ol class="home-actions">

<li>
  <% if current_user && current_user.admin? %>
    <%= link_to settings_path, :class => "button button-hollow" do %>
      <i class="fas fa-cog"></i>
      Settings
    <% end %>
  <% end %>
</li>

<!-- <li>
<%= link_to documentation_path, :class => "button button-hollow" do %>
  <i class="fas fa-book"></i>
  Guide
<% end %>
</li> -->

<li>
<%= link_to post_problem_path, :class => "button" do %>
  <i class="fas fa-pen"></i>
  Start converging
<% end %>
</li>
</ol>

<% if @sponsored_problems.length > 0 %>
<div class="dashboard-item">
  <h1>
    <i class="fas fa-handshake"></i>
    My collaborations
  </h1>
  <ul>
    <% @sponsored_problems.each do |problem| %>
      <%= link_to issue_path(problem) do %>
        <li class="home-item"> <%= problem.title %> </li>
      <% end %>
    <% end %>
  </ul>
</div>
<% end %>

<% if @proposals.length > 0 %>
<div class="dashboard-item">
  <h1>
    <i class="fas fa-comment-alt"></i>
    My proposals
  </h1>
  <ul>
    <% @proposals.each do |solution| %>
      <%= link_to solution_path(:problem_id => solution.problem_id, :solution_id => solution.id) do %>
        <li class="home-item"> <%= solution.title %> </li>
      <% end %>
    <% end %>
  </ul>
</div>
<% end %>

<% else %>
  This app is a tool to aid in the Convergent Facilitation process. Sign up/in to use.
<% end %>

