<header>

<nav class="navbar">
  <div class="container-fluid converge-header">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <% (ENV['GROUP_NAME'] != nil)? group_name = ENV['GROUP_NAME'] : group_name = "Decentralized CAN" %>
      <%= link_to root_path, id: "logo", :class => "navbar-brand" do %>
        <%= image_tag("logo.png", :border=>0, :class => 'logo-image') %>
        <span id="logo-name"><%= group_name %></span><span id="beta-tag">Beta</span>
      <% end %>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse toolbar-1" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <!-- <li class="active"><a href="#">All posts <span class="sr-only">(current)</span></a></li> -->
      </ul>
      <ul class="nav navbar-nav navbar-left">
        
        <!-- <li>
          <%= link_to documentation_path do %>
            <i class="fas fa-book"></i>
            Guide
          <% end %>
        </li> -->

        <% if logged_in? %>
          <li>
          <%= link_to root_path do %>
            <i class="fas fa-hands-helping"></i>
            Collaborations
          <% end %>
          </li>
        <% end %>

        <li>
        <%= link_to post_problem_path do %>
          <i class="fas fa-plus-circle"></i>
          New collaboration
        <% end %>
        </li>
      </ul>

      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
        
        <li class="user-nav-link">
          <%= link_to current_user do %>
            <%= current_user.name %>
            <%= gravatar_for(current_user) %>
          <% end %>
        </li>

        <li class="notifications-li">
          <%= link_to notifications_path do %>
            <i class="fas fa-bell"></i>

            <% if current_user.notification.where(:read => nil).count > 0 %>
              <span class="notification-number"><%= current_user.notification.where(:read => nil).count %></span>
            <% else %>
              <span class="notification-number">&nbsp;</span>
            <% end %>

            <!-- Notifications -->
          <% end %>
        </li>
        <% end %>

        <li>
          <span class="tooltip-toggle" href="#" aria-label="If you have a question, comment or need assistance, feel free to email convergentfacilitation@
          baynvc.org" tabindex="0">
          <i class="far fa-question-circle" style="font-size: 18px; margin-top: 8px; margin-left: 6px;"></i>
          </span>
        </li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

</header>